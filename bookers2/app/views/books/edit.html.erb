<body>
	<div class="cotainar">
		<div class="row">
			<div class="col-md-6 col-md-offset-3"
> 		<h1>Editing Book</h1>
 		<%= form_for(@book) do |f| %>
 			<div class="field row">
				<%= f.label :title,"Title" %>
				<%= f.text_field :title,class:"col-xs-12" %>
			</div>
			<div class="field row">
				<%= f.label :category,"Body" %>
				<%= f.text_area :category,:maxlength => "200", class:"col-xs-12" %>
			</div>
			<div class="actions row">
				<%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %>
			</div>
			<%= link_to "Show",book_path(@book) %>|<%= link_to "Back",books_path %>
			<% end %>
			</div>
		</div>
	</div>
</body>