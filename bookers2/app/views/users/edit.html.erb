<body>
	<div class="containar">
		<h2>User info</h2>
		<div class="form-body">
		<%= form_for(@user) do |f| %>
		<div class="field">
			<label>Name</label>
        <%= f.text_field :name,:maxlength => "20", autofocus: true %>
         </div>
         <div class="field">
         	<label>Image</label>
         	   <%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class: "user-edit-form" %>
         </div>
         <div class="field">
        	<label>Introduction</label>
        	<%= f.text_area :introduction, :maxlength => "50" %>
    	</div>
			<div class="actions">
			<%= f.submit "Update User" %>
			</div>
		<% end %>
