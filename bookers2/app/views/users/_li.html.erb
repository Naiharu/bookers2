<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field row">
				<%= f.label :title,"Title" %>
				<%= f.text_field :title,class:"col-xs-12" %>
				</div>
				<div class="field row">
				<%= f.label :category,"Opinion" %>
				<%= f.text_area :category, :maxlength => "200" ,class:"col-xs-12"%>
				</div>
				<div class="action row"><br>
					<%= f.submit "Create Book",class: "col-xs-12 btn btn-primary " %>
				</div>
				<% end %>