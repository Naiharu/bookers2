<!DOCTYPE html>
<html>
  <head>
    <title>RBT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="navbar navbar-fixed-top navbar-inverse">
	<div class="containar">
	<nav class="nav navbar-nav navbar-left" style="color:white">
		<span>Bookers</span>
	</nav>
	<nav>
		<ul class="nav navbar-nav navbar-right">
		<% if user_signed_in? %>
    <div class="icon">
  		<%= link_to " Home",user_path(current_user.id) ,class:"glyphicon glyphicon-home c"%>
    </div>
    <div class="icon">
  	 	<%= link_to " Users", users_path, class:"glyphicon glyphicon-user c" %>
     </div>
     <div class="icon">
  	 	<%= link_to " Books", books_path, class:"glyphicon glyphicon-book c" %>
     </div>
      <div class="icon">
  	 	<%= link_to " logout", destroy_user_session_path, class:"glyphicon glyphicon-log-in c" ,method: :delete,data: { confirm: 'ログアウトしますか？' } %>
     </div>
  	 <% else %>
     <div class="icon">
  	 	<%= link_to " Top", top_path, class:"glyphicon glyphicon-home c" %>
     </div>
     <div class="icon">
  	 	<%= link_to " About",about_path,class:"glyphicon glyphicon-link c" %>
     </div>
     <div class="icon">
  	 	<%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit c" %>
     </div>
     <div class="icon">
  	 	<%= link_to " login", new_user_session_path,class:"glyphicon glyphicon-log-in c" %>
  	 </div>
     <% end %>
  		</ul>
	</nav>
	</div>
</header>
  <body>
    <%= yield %>
  </body>
  <footer>
	<div class="containar">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>
</html>
